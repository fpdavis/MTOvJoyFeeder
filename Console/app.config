<?xml version="1.0" encoding="utf-8"?>
<configuration>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/></startup>
  <appSettings>
    <!-- If full ConfigPath is ommited then it will look in executable direcory. -->
    <add key="ConfigPath" value=""/>

    <!-- If full ConfigFile is ommited then it will use "MTOvJoyFeeder.json". -->
    <add key="ConfigFile" value="MTOvJoyFeeder.json"/>

    <!-- Maximum number of errors before removing a Joystick from monitoring. -->
    <add key="ErrorsBeforeJoystickRemoval" value="500"/>
    
    <!-- If set to true messages will be sent to the event log. Requires Admin privalages for the first run to generate the initial log. -->
    <add key="EnableEventLogging" value="false"/>
    
    <!-- Milliseconds to sleep between buffer checks. -->
    <add key="SleepTime" value="50"/>
    
  </appSettings>
</configuration>
